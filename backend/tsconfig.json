{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "backend/dist",
    "rootDir": ".",
    "strict": true,
    "moduleDetection": "force",
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*",
    "scripts/**/*",
    "controllers/**/*", 
    "interfaces/**/*", 
    "routes/**/*",
    "tests/**/*",
    "utils/**/*",
    "server.ts"
  ]
}
