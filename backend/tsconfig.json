{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "moduleDetection": "force"
  },
  "include": [
    "src/**/*",
    "scripts/**/*",
    "controllers/**/*",
    "interfaces/**/*",
    "routes/**/*",
    "tests/**/*",
    "utils/**/*",
    "server.ts",
    "types.d.ts"
  ]
}
